{
    "tasks": [
        {
            "type": "shell",
            "label": "compiler debug",
            "command": "clang++",
            "args": [
                "-g",
                "${file}",
                "-I./include",
                "-v",
                "-o",
                "./target/debug/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "test"
        },
        {
            "type": "shell",
            "label": "compiler release",
            "command": "clang++",
            "args": [
                "--std=c++20",
                "-fexperimental-library",
                "${file}",
                "-I./include",
                "-v",
                "-o",
                "./target/release/${fileBasenameNoExtension}",
                "-O2"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "compiler release for win",
            "command": "x86_64-w64-mingw32-g++-win32",
            "args": [
                "-static",
                "-Iinclude",
                "--std=c++20",
                "-fexperimental-library",
                "-I../include",
                "-I../../include",
                "-o",
                "/mnt/c/Users/nan/release/${fileBasenameNoExtension}.exe",
                "${file}",
                "-stdlib=libc++",
                "-lws2_32"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "build"
        },
    ],
    "version": "2.0.0"
}